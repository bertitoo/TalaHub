<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <EditText
            android:id="@+id/etBuscarAgenda"
            android:hint="Buscar en tu agenda..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:background="@drawable/bg_agenda_item"
            android:layout_marginBottom="16dp"
            android:textColor="@color/texto_principal"
            android:textColorHint="@color/texto_secundario"/>

        <LinearLayout
            android:id="@+id/layoutExportarPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/btnExportarPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exportar agenda a PDF"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/bg_boton_pdf"
                android:drawableLeft="@drawable/ic_file"
                android:drawablePadding="8dp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_eventos_agenda"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
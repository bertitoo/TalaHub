<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="12dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivImagenEventoAdmin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_corner_bg"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreEventoAdmin"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/color_negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFechaEventoAdmin"
                android:textSize="13sp"
                android:textColor="@color/color_naranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnEditarEvento"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/btnEliminarEvento"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_delete" />
    </LinearLayout>
</androidx.cardview.widget.CardView>